@{
    ViewBag.Title = "Online Fee Payment";
}

<style>
    body {
        background: linear-gradient(to right, #ffcc00, #0033cc);
    }

    .payment-container {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        max-width: 500px;
        margin: 50px auto;
        text-align: center;
    }

        .payment-container p {
            font-size: 18px;
            margin-bottom: 20px;
            color: black;
        }

    .btn-pay {
        background-color: #28a745;
        color: white;
        font-size: 18px;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-pay:hover {
            background-color: #218838;
        }
</style>

<div class="payment-container">
    <h2>Online Fee Payment</h2>
    <p>Click below to proceed with the payment.</p>
    <a href="https://www.tcsion.com/SelfServices/" class="btn-pay">Pay Now</a>
</div>
