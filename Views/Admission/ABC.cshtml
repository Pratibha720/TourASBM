@{
    ViewBag.Title = "Application Form";
}

<style>
    /* Background Styling */
    body {
        background: linear-gradient(to right, #f1c40f, #3498db); /* Yellow to Blue Gradient */
        color: #333;
        font-family: 'Arial', sans-serif;
    }

    /* Form Container */
    .form-container {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        width: 40%;
        margin: 50px auto;
    }

        /* Form Title */
        .form-container h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            font-weight: bold;
            color: #2c3e50;
        }

    /* Input Fields */
    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    input, select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        outline: none;
        transition: border 0.3s ease-in-out;
    }

        input:focus, select:focus {
            border-color: #3498db;
        }

    /* Submit Button */
    .submit-btn {
        background: #f1c40f;
        color: white;
        padding: 12px;
        width: 100%;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 18px;
        font-weight: bold;
        transition: 0.3s;
    }

        .submit-btn:hover {
            background: #e67e22;
        }
</style>

<div class="form-container">
    <h2>Application Form</h2>
    <form>
        <div class="form-group">
            <label>Full Name:</label>
            <input type="text" placeholder="Enter your full name" required>
        </div>

        <div class="form-group">
            <label>Email:</label>
            <input type="email" placeholder="Enter your email" required>
        </div>

        <div class="form-group">
            <label>Phone Number:</label>
            <input type="tel" placeholder="Enter your phone number" required>
        </div>

        <div class="form-group">
            <label>Course Applied For:</label>
            <select required>
                <option value="">Select Course</option>
                <option value="BBA">BBA</option>
                <option value="MBA">MBA</option>
                <option value="B.Tech">B.Tech</option>
                <option value="M.Tech">M.Tech</option>
            </select>
        </div>

        <div class="form-group">
            <label>Upload Documents:</label>
            <input type="file" required>
        </div>

        <button type="submit" class="submit-btn">Submit Application</button>
    </form>
</div>
