            @section Scripts {
                <script>
                    function startCounter(id, endValue, duration) {
                        const element = document.getElementById(id);
                        let startValue = 0;
                        const increment = Math.ceil(endValue / (duration / 10));

                        const timer = setInterval(() => {
                            startValue += increment;
                            if (startValue >= endValue) {
                                element.textContent = endValue;
                                clearInterval(timer);
                            } else {
                                element.textContent = startValue;
                            }
                        }, 10);
                    }

                    function observeCounters() {
                        const section = document.querySelector('.stats-section');
                        const observer = new IntersectionObserver((entries) => {
                            if (entries[0].isIntersecting) {
                                startCounter('years-count', 12, 2000);
                                startCounter('students-count', 1000, 2500);
                                startCounter('recruiters-count', 50, 2000);
                                startCounter('programs-count', 5, 1500);
                                observer.disconnect(); // Ensure it runs only once
                            }
                        }, { threshold: 0.5 });

                        observer.observe(section);
                    }

                    window.onload = observeCounters;
                </script>

